<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Upload a new Song</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/songs" method="POST">
                <div class="form-group"><input class="form-control" type="text" name="name" placeholder="Song Name"></div>
                <div class="form-group"><input class="form-control" type="text" name="song" placeholder="Song URL"></div>
                <div class="form-group"><input class="form-control" type="text" name="album" placeholder="Album Name"></div>
                <div class="form-group"><input class="form-control" type="text" name="image" placeholder="Image URL"></div>
                <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Upload!</button></div>
            </form>
            <a href="/songs">Back</a>
        </div>
</div>

<% include ../partials/footer %>